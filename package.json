{
  "name": "auth-api",
  "version": "1.1.0",
  "description": "Desafio Técnico: API de Autenticação",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/index.js",
    "test:unit": "node --test src/modules/**/__test__/**.spec.js",
    "test:e2e": "node --test test/**.js",
    "lint": "eslint ./src ./test --ext .js",
    "lint:fix": "eslint ./src ./test --ext .js --fix",
    "style:check": "prettier --check src/**/*.js src/modules/** test/**/*.js",
    "style:fix": "prettier --write src/**/*.js src/modules/** test/**/*.js",
    "build": "npm run lint:fix && npm run style:fix && babel src -d dist",
    "start": "npm run build && node dist/index.js",
    "build:gulp": "npx gulp",
    "release": "npm run build && npx changeset tag"
  },
  "keywords": [
    "node",
    "express",
    "api"
  ],
  "author": "Luca Poe",
  "license": "ISC",
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.4",
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-modules": "^0.1.6",
    "@types/express": "^4.17.21",
    "@types/gulp": "^4.0.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-eslint": "^6.0.0",
    "gulp-if": "^3.0.0",
    "gulp-prettier": "^6.0.0",
    "prettier": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamthepoe/api-02.git"
  }
}
